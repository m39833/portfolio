{
    "useTabs": false,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "printWidth": 100,
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
    "bracketSameLine": true,
    "overrides": [
        {
            "files": ["*.html", "*.svelte"],
            "options": {
                "parser": "svelte",
                "tabWidth": 2
            }
        }
    ]
}
